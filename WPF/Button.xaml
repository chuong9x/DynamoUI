<UserControl x:Class="DynamoUI.Button"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DynamoUI"
             mc:Ignorable="d" Height="40" Width="130">
    <Grid>

        <Button Content="-" Command="{Binding DecreaseCommand}" HorizontalAlignment="Left" VerticalAlignment="Top"
                Width="60
                " Height="33" Background="AliceBlue" Margin="2,2,0,0" />
        <Button Content="+" Command="{Binding IncreaseCommand}" HorizontalAlignment="Left" VerticalAlignment="Top"
                Width="60" Height="33" Background="AntiqueWhite" Margin="67,2,0,0" />

    </Grid>
</UserControl>